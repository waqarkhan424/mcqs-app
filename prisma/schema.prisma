
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}



model Question {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  question      String
  options       String[]
  correctAnswer String
  category      String?
  topic         String?
}


model Vocabulary {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  word         String
  definition   String
  urduMeaning  String
  example      String
  topic        String
}




model Ministry {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String       @unique
  departments Department[]
}

model Department {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  slug      String
  type      String
  posts     Post[]

  ministry   Ministry @relation(fields: [ministryId], references: [id])
  ministryId String   @db.ObjectId
}

model Post {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  bs            String
  postName      String
  qualification String
  ageLimit      String

  department   Department @relation(fields: [departmentId], references: [id])
  departmentId String     @db.ObjectId
}



model GrammarTopic {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  level   String 
  slug    String @unique
  title   String
  content String
}
