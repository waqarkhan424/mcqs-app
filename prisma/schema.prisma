
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}



model Question {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  question      String
  options       String[]
  correctAnswer String
  category      String?
  topic         String?
}


model Vocabulary {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  word         String
  definition   String
  urduMeaning  String
  example      String
  topic        String
}


model Ministry {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  slug       String      @unique
  departments Department[]
}

model Department {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  slug       String
  type       String
  ministryId String
  ministry   Ministry @relation(fields: [ministryId], references: [id])
}

